<%= render 'shared/app_title' %>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-xs-12 col-md-5">
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control #{'is-invalid' if flash[:danger]}", autofocus: true, "aria-describedby": 'usernameHelp' %>
            <% if flash[:danger] %>
              <small id="usernameHelp" class="invalid-feedback"><%= flash[:danger] %></small>
            <% else %>
              <small id="usernameHelp" class="form-text text-muted"><%= t('sessions.sign_up_for_service') %></small>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control #{'is-invalid' if flash[:danger]}" %>
            <% if flash[:danger] %>
              <small id="usernameHelp" class="invalid-feedback"><%= flash[:danger] %></small>
            <% end %>
          </div>
          <%= f.submit t('sessions.register'), class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-2">
        <div class="flex-container flex-container--col divider">
          <hr>
          <img src="<%= image_path('icon.png') %>" class="rounded img-fluid" alt="C">
          <hr>
        </div>
      </div>
      <div class="col-xs-12 col-md-5">
        <div class="flex-container flex-container--col py-3">
          <h4 class="mb-4 text-center"><%= t('sessions.login_for_service') %></h4>
          <%= link_to t('sessions.login'), login_path, class: "btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
